#!/bin/bash

. "${top_srcdir-.}"/tests/common.sh

FILE_TARGET="$(mktemp /tmp/printerd.XXXXXXXXX)"
function finish {
    rm -f "$FILE_TARGET"
}
trap finish EXIT

# Create a printer.
if ! "$PDCLI" --session create-printer job1 "file://${FILE_TARGET}"; then
    printf "pd-cli failed\n"
    result_is 1
fi

# Create a job on that printer.
objpath=/org/freedesktop/printerd/printer/job1
printf "CreateJob\n"
result=$(gdbus call --session \
	       --dest $PD_DEST \
	       --object-path $objpath \
	       --method $PD_IFACE.Printer.CreateJob \
	       '{}' \
	       'job name' \
	       '{}')
if ! diff -u - <(printf "%s\n" "$result" | sed -e 's,[0-9]\+,X,') <<"EOF"
(objectpath '/org/freedesktop/printerd/job/X', @a{sv} {})
EOF
then
    printf "Unexpected result\n"
    result_is 1
fi

# Inspect its properties
jobpath=$(printf "%s" "$result" | sed -ne "s:^.*'\(.*\)'.*$:\1:p")
if ! diff -u - <(gdbus introspect --session --only-properties \
		       --dest $PD_DEST \
		       --object-path "$jobpath" | \
			grep ' = ' | LC_ALL=C sort | \
			sed \
			    -e 's,^ *readonly ,,' \
			    -e '/u Id /d' \
			    -e '/a{sv} Attributes /d' \
			    -e '/s DeviceUri /d') <<EOF
as StateReasons = ['job-incoming'];
o Printer = '$objpath';
s Name = 'job name';
u State = 4;
EOF
then
    printf "Properties differ from expected\n"
    result_is 1
fi

# Cancel it
printf "Cancel\n"
result=$(gdbus call --session \
	       --dest $PD_DEST \
	       --object-path $jobpath \
	       --method $PD_IFACE.Job.Cancel \
	       '{}')
if [ "$result" != "()" ]; then
    printf "Unexpected result\n"
    result_is 1
fi

# Inspect its properties
if ! diff -u - <(gdbus introspect --session --only-properties \
		       --dest $PD_DEST \
		       --object-path "$jobpath" | \
			grep ' = ' | LC_ALL=C sort | \
			sed \
			    -e 's,^ *readonly ,,' \
			    -e '/u Id /d' \
			    -e '/a{sv} Attributes /d' \
			    -e '/s DeviceUri /d') <<EOF
as StateReasons = ['job-canceled-by-user'];
o Printer = '$objpath';
s Name = 'job name';
u State = 7;
EOF
then
    printf "Properties differ from expected\n"
    result_is 1
fi

# Delete the printer.
printf "DeletePrinter\n"
result=$(gdbus call --session \
	       --dest $PD_DEST \
	       --object-path $PD_PATH/Manager \
	       --method $PD_IFACE.Manager.DeletePrinter \
	       "{}" \
	       $objpath)

if [ "$result" != "()" ]; then
    printf "Expected (): %s\n" "$result"
    result_is 1
fi

result_is 0
